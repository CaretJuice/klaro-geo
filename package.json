{
    "name": "klaro-geo",
    "version": "1.0.0",
    "description": "Klaro Geo WordPress Plugin",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:klaro-geo": "jest tests/js/test-klaro-geo.js",
        "test:klaro-geo-comprehensive": "jest tests/js/test-klaro-geo-comprehensive.js",
        "test:coverage": "jest --coverage",
        "e2e:install": "npx playwright install chromium firefox",
        "e2e:docker:up": "docker compose -f docker-compose.e2e.yml up -d",
        "e2e:docker:down": "docker compose -f docker-compose.e2e.yml down",
        "e2e:wait": "wait-on http://localhost:8080 -t 60000",
        "e2e:setup": "npm run e2e:docker:up && npm run e2e:wait",
        "e2e:test": "playwright test",
        "e2e:test:headed": "playwright test --headed",
        "e2e:test:debug": "playwright test --debug",
        "e2e:test:ui": "playwright test --ui",
        "e2e:report": "playwright show-report e2e-report",
        "e2e": "npm run e2e:setup && npm run e2e:test",
        "e2e:full": "npm run e2e:setup && npm run e2e:test && npm run e2e:docker:down"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.22.5",
        "@babel/preset-env": "^7.22.5",
        "@playwright/test": "^1.56.1",
        "babel-jest": "^29.5.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "wait-on": "^9.0.3"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "moduleFileExtensions": [
            "js"
        ],
        "testMatch": [
            "**/tests/js/test-*.js"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/tests/js/setup.js",
            "/tests/js/run-tests.js"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "setupFiles": [
            "./tests/js/setup.js"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "js/*.js",
            "!js/vendor/**"
        ]
    }
}
