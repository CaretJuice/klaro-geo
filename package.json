{
    "name": "klaro-geo",
    "version": "1.0.0",
    "description": "Klaro Geo WordPress Plugin",
    "main": "index.js",
    "scripts": {
      "test": "jest",
      "test:watch": "jest --watch"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
      "@babel/core": "^7.22.5",
      "@babel/preset-env": "^7.22.5",
      "babel-jest": "^29.5.0",
      "jest": "^29.5.0",
      "jest-environment-jsdom": "^29.5.0"
    },
    "jest": {
      "testEnvironment": "jsdom",
      "moduleFileExtensions": [
        "js"
      ],
      "testMatch": [
        "**/tests/js/**/*.js"
      ],
      "testPathIgnorePatterns": [
        "/node_modules/",
        "/tests/js/jest.setup.js"
      ],
      "transform": {
        "^.+\\.js$": "babel-jest"
      },
      "setupFiles": [
        "./tests/js/jest.setup.js"
      ]
    }
  }